// col-lg – large screen 1360+
// col-md – medium screen 1220+
// col-sm – small screem 1000+
// col – tablet, desktop 768+
// col-xs – all screens (phone, tablet, desktop)

.container
	margin 0 auto
	@media desktop
		padding 0 10px
	@media lg
		width 1340px
	@media md
		width 1200px
	@media sm
		width 980px
	@media phone_tablet
		padding 0 15px
	&_carousel
		spacer = 50
		lg = "(min-width: " + lgWidth + ") and (max-width: " + (lgWidth + spacer) + ")"
		md = "(min-width: " + mdWidth + ") and (max-width: " + (mdWidth + spacer) + ")"
		sm = "(min-width: " + smWidth + ") and (max-width: " + (smWidth + spacer) + ")"
		@media lg
			width 1290px
		@media md
			width 1150px
		@media sm
			width 920px
		@media tablet
			width 90%
			min-width 700px

.box
	background-color #fff
	box-shadow 0 3px 5px rgba(13, 99, 86, .18)
	margin-bottom 20px
	@media tablet_desktop
		border-radius 6px
	@media phone
		margin-left -15px
		margin-right -15px
	&_hide
		@media phone
			background-color transparent
			box-shadow none


COLS = 10

.row
	display flex
	flex-wrap wrap
	@media desktop
		margin 0 -10px
	@media phone_tablet
		margin 0 -15px
	[class*="col-"]
		flex 0 0 100%
		max-width 100%
		@media desktop
			padding 0 10px
		@media phone_tablet
			padding 0 15px


	for num in (1..COLS)
		.col-xs-{num}
			flex 0 0 (100% / COLS * num)
			max-width (100% / COLS * num)

	@media (min-width: tabletWidth)
		for num in (1..COLS)
			.col-{num}
				flex 0 0 (100% / COLS * num)
				max-width (100% / COLS * num)
	@media (min-width: smWidth)
		for num in (1..COLS)
			.col-sm-{num}
				flex 0 0 (100% / COLS * num)
				max-width (100% / COLS * num)

	@media (min-width: mdWidth)
		for num in (1..COLS)
			.col-md-{num}
				flex 0 0 (100% / COLS * num)
				max-width (100% / COLS * num)

	@media (min-width: lgWidth)
		for num in (1..COLS)
			.col-lg-{num}
				flex 0 0 (100% / COLS * num)
				max-width (100% / COLS * num)
