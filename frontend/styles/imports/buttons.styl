.btn
	display inline-block
	vertical-align middle
	padding 6px 12px
	border 0 none
	border-radius 30px
	background #fff
	text-align center
	text-transform uppercase
	white-space nowrap
	font-weight 500
	color mainColor
	cursor pointer
	outline none
	user-select none
	transition .15s background ease-in-out, .15s color ease-in-out, .15s border-color ease-in-out, .15s box-shadow ease-in-out
	truncateString()
	&:hover
		color mainColor
		background darken(#fff, 20%)
	&:active
		color mainColor
		background darken(#fff, 40%)
	&:focus
		outline none
	a&
		text-decoration none
	&.disabled
	&[disabled]
		cursor not-allowed
		opacity .5
		pointer-events none
	&_link
		background none
		padding 0
	&_small
		padding 6px 12px
	&_big
		padding 12px 25px
		.btn-icon
			font-size 20px
	&_wide
		padding 6px 25px
	&_red
		background redColor
		color #fff
		&:hover
			color #fff
			background darken(redColor, 20%)
		&:active
			color #fff
			background darken(redColor, 40%)
	&_grey
		background #3e3e3e
		color #fff
		&:hover
			color #fff
			background darken(#3e3e3e, 20%)
		&:active
			color #fff
			background darken(#3e3e3e, 60%)
	&_main
		color #fff
		background primaryColor
		box-shadow 0 5px 5px rgba(255, 82, 82, .1)
		.modal &
			padding 8px 30px
		&:hover
			color #fff
			background darken(primaryColor, 20%)
			box-shadow 0 7px 10px rgba(255, 82, 82, .18)
		&:active
			color #fff
			background darken(primaryColor, 20%)
			box-shadow 0 3px 10px rgba(255, 82, 82, .44)
		&-bordered
			background #fff
			border 1px solid #e91E63
			color #e91E63
			&:hover
				color #fff
				background #ff0057
				box-shadow 0 7px 10px rgba(255, 82, 82, .18)
				border 1px solid #ff0057
			&:active
				color #fff
				background #d50e52
				box-shadow 0 3px 10px rgba(255, 82, 82, .44)
				border 1px solid #d50e52
	&_block
		width 100%
	&_default-bordered
		color #6f748e
		border 1px solid #6f748e
		text-transform uppercase
		&.btn_big
			padding-top 11px
			padding-bottom @padding-top
		&:hover
			color #fff
			background #9199c1
			border 1px solid #9199C1
		&:active
			color #fff
			background #6f748e
	&_bordered
		padding 5px 16px
		font-size 14px
		color #455a64
		background #f7f7f7
		border 1px solid #d8d8d8
		border-radius 30px
		@media sm
			font-size 12px
		@media phone
			padding 7px 20px
			font-size 18px
			.modal &
				padding 6px 30px
				font-size 14px
		.rating-box &
			padding 8px 23px
			text-transform none
		.modal &
			@media tablet_desktop
				padding 8px 30px
		&:hover
			background rgba(137, 137, 137, .21)
			border 1px solid textGreyColor
			&.btn_bordered-green
				background rgba(67, 160, 71, .1)
				border 1px solid #43a047
			&.btn_bordered-red
				background rgba(208, 2, 27, .1)
				border 1px solid #d0021b
		&-green
			&.selected
				background rgba(67, 160, 71, 0.05)
				border 1px solid #43A047
		&-red
			&.selected
				background rgba(224, 0, 81, 0.05)
				border 1px solid #E00051
	&_square
		padding 2px 6px
		border 1px solid
		border-radius 2px
		font-size 12px
		background transparent
		text-transform none
		@media phone
			padding 6px 14px !important
			font-size 16px !important
		&:hover
		&:active
			color #fff
		&-green
			color #43a047
			border-color #43a047
			&:hover
				background rgba(#43a047,.7)
				border-color rgba(#43a047,.5)
			&:active
				background #37923b
				border-color #37923b
		&-red
			color #d0021b
			border-color #d0021b
			&:hover
				background rgba(#d0021b,.7)
				border-color rgba(#d0021b,.5)
			&:active
				background #d0021b
				border-color #d0021b
		&-gray
			color #949494
			border-color #949494
			padding 2px 12px
			&:hover
				background rgba(#949494,.7)
				border-color rgba(#949494,.5)
			&:active
				background #888888
				border-color #888888
	&-icon
		display inline-block
		vertical-align middle
		&:not(:first-child:last-child)
			margin-right 3px
	&-count
		margin-left 2px
	&_telegram
		padding 8px 35px
		color #fff
		background #269edc
		border-radius 90px
		text-transform none
		transition .2s background ease-in-out
		&:hover
			color #fff
			background rgba(#269edc,.7)
		&:active
			color #fff
			background #1D81B5
	&_messenger
		padding 8px 35px
		color #fff
		background #1e88e5
		border-radius 90px
		text-transform none
		transition .2s background ease-in-out
		&:hover
			color #fff
			background rgba(#1e88e5,.7)
		&:active
			color #fff
			background #1667AF
	&_facebook
		display flex
		align-items center
		padding 8px 48px
		color #fff
		background #4360ae
		border-radius 90px
		text-align left
		text-transform none
		transition .2s background ease-in-out
		&:hover
			color #fff
			background rgba(#4360ae,.7)
		&:active
			color #fff
			background #31457d
	&_google
		display flex
		align-items center
		padding 8px 48px
		color #fff
		background #d74641
		border-radius 90px
		text-align left
		text-transform none
		transition .2s background ease-in-out
		&:hover
			color #fff
			background rgba(#d74641,.7)
		&:active
			color #fff
			background #ae3935
	&_instagram
		display flex
		align-items center
		padding 8px 48px
		color #fff
		background linear-gradient(256.21deg, #903CB5 4.84%, #CB4871 100%)
		border-radius 90px
		text-align left
		text-transform none
		transition .2s background ease-in-out, .2s opacity ease-in-out
		&:hover
			color #fff
			background linear-gradient(256.21deg, #903CB5 4.84%, #CB4871 100%)
			opacity .7
		&:active
			color #fff
			background linear-gradient(256.21deg, #6F2F8C 4.84%, #9D3858 100%)
