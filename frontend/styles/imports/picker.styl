// time picker
.vue__time-picker 
	position relative
	width 4em
	@media phone
		margin-left -5px
	&:before
	&:after
		position absolute
		content ''
		bottom 0px
		height 1px
		width 21px
		background #d8d8d8
		@media phone
			width 25px
	&:before
		left 0px
	&:after
		right 7px
		@media phone
			right 0px
	input.display-time
		width 3.2em
		height 1em
		padding 0
		font-size 16px
		letter-spacing 2px
		border 0 none
		@media phone
			font-size 20px
		&:focus
			outline none
	.dropdown
		width 4em
		left -3px
		top calc(1em + 10px)
		@media phone
			width 5em
			left -7px
		.select-list
			width 4em
			@media phone
				width 5em
	.clear-btn
		right -6px
.vue__time-picker .dropdown ul li:not([disabled]).active
.vue__time-picker .dropdown ul li:not([disabled]).active:focus
.vue__time-picker .dropdown ul li:not([disabled]).active:hover
	background-color #3f51b5
	

// date picker
.vdp-datepicker
	position relative
	width 128px
	&:before
		position absolute
		content ''
		top 10px
		right 3px
		border 4px solid transparent
		border-top 5px solid primaryColor
		transform rotate(0deg)
	&.open
		&:before
			top 7px
			transform rotate(180deg)

	input
		width 100%
		font-size 16px
		border 0 none
		border-bottom 1px solid #d8d8d8
		&:focus
			outline none
	.vdp-datepicker__calendar
		@media phone
			left calc(50% - 149px)
		.cell.day.selected
			background #3f51b5
			color #fff

.vdp-datepicker__calendar .cell:not(.blank):not(.disabled).day:hover
.vdp-datepicker__calendar .cell:not(.blank):not(.disabled).month:hover
.vdp-datepicker__calendar .cell:not(.blank):not(.disabled).year:hover
	border-color #3f51b5
